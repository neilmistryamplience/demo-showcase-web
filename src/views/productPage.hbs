{{#if timestamp}}<div class="af-timemachine">
    <span>Currently Viewing: {{moment timestamp format ="dddd, DD MMMM YYYY HH:mm:ss ZZ"}}</span>
    <a href="/current">View Current</a>
</div>{{/if}}

{{> navigation megaMenu}}

<div class="af-pdp-content">
    
    <div class="af-pdp-content__product">
        <div class="af-pdp-viewer">
            <div class="af-pdp-viewer__target" id="amp-container" >
            </div>
        </div>

        <div class="af-pdp-details">

            <div class="af-pdp-details-summary">
                <div class="af-pdp-details-summary__price">$129.95</div>
                <h1 class="af-pdp-details-summary__name">DANIELA PULLOVER</h1>
                <div class="af-pdp-details-summary__sku">SKU: 18WWSK28</div>
            </div>

            <div class="af-pdp-details-controls">
                <ul class="af-pdp-details-controls__swatch">
                    <li><span>XS</span></li>
                    <li><span>S</span></li>
                    <li><span>M</span></li>
                    <li><span>L</span></li>
                    <li><span>XL</span></li>
                </ul>

                <div class="af-pdp-details-controls__sizeGuide">SIZE <a href="">SIZE GUIDE</a></div>
                
                <div>
                    <button type="button" class="af-button af-button-dark">ADD TO MY BAG</button>
                </div>
                
                <div>
                    <button type="button" class="af-button af-button-light">SEE AVAILABILITY IN-STORE</button>
                </div>

                <p class="af-pdp-details-controls__description">
                    A jacket or a blouse? You donâ€™t have to choose: you can have it all with this Twin Set layered piece. A black knit jacket with floral embroidery to the sides, and a blouse underneath with Indonesia-inspired print that comes to your wardrobe to give you versatility and a great solution for all your outfits.
                </p>
            </div>

            <div class="af-pdp-details-panels">
                <ul class="af-pdp-details-panels__wrapper">
                    <li>
                        <span>Product details</span>
                    </li>
                    <li>
                        <span>Deliveries &amp; Returns</span>
                    </li>
                </ul>
            </div>

        </div>
    </div>
    
    <div class="af-pdp-content__content">
        {{#each slots}}
            <div class="af-slot" data-slot-id="{{this.[@id]}}" data-slot-name="{{this._meta.name}}" data-edition="{{this._meta.edition.id}}" >
                {{templateChooser this }}

                <div class="af-debug-overlay">
                    <div class="af-debug-menu">
                        <a class="af-debug-menu-slot-name">Slot: {{slotName (remove this.[@id] "http://content.cms.amplience.com/")}}</a>

                        <a href="https://content.amplience.net/#!/willow/authoring/content-item/edit/5b867537cff47e0001753890/{{remove this.[@id] "http://content.cms.amplience.com/"}}" class="af-button af-button-dark">View Slot</a>
                        <a href="https://content.amplience.net/#!/willow/planning/edition/5b7e70a2c9e77c0001671425/{{this._meta.edition.id}}/" class="af-button af-button-dark">View Edition</a>

                    </div>
                </div>
            </div>
        {{/each}}
    </div>

    
</div>


{{> footer}}

