<link rel="stylesheet" href="/css/viewer/viewer.css">
<link rel="stylesheet" href="/css/viewer/video-js.min.css">

<script language="javascript">
    $().ready(function() {
        var viewerSettings = {
            target: '.af-pdp-viewer__target',
            client: 'willow',
            imageBasePath: '//i1.adis.ws/',
            set: 'daniela_18WWSK28_2000_set',
            view: 'portrait',
            secure: true,
            ampConfigs: {
                mainContainerCarousel: {
                    listVisible: 2
                }
            }
        };

        var viewer = new amp.Viewer(viewerSettings);
    });
</script>